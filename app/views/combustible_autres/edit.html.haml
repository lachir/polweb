%h1 Edition du combustible autre
.container
	- unless session[:ecriture]
		= link_to 'S\'authentifier', new_session_path 
	- else
		= render 'form'
.row
	.col-md-1
		= link_to( projet_path(session[:id_projet], :anchor => '64'), class: "btn btn-default") do
			%i.glyphicon.glyphicon-home
	.col-md-1
		= link_to [@projet,@combustible_autre], class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } do
			%i.glyphicon.glyphicon-trash