<div class='col-md-6 col-md-offset-3'>

<h1>Authentifiez-vous avec votre login windows</h1>


<%= adauth_form do %>
                 <div class="form-group">
                <%=    label_tag 'Login' %>
                <%=    text_field_tag :username, nil, class: "form-control" %>
                </div>
                <div class="form-group">
                <%= label_tag 'Mot de passe' %>
                <%=    password_field_tag :password, nil, class: "form-control" %> </div>
                <%=    submit_tag "Ok", class: "btn btn-default" %>
               
               <% end %></div>