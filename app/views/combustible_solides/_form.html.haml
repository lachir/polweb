.col-md-6
	= simple_form_for([@projet, @combustible_solide], wrapper: :vertical_form) do |f|
		= f.error_notification
		.form-inputs
			= f.input :fonction, placeholder: 'Fonction'
			= f.input :combustible_defaut_fr, placeholder: 'Combustible FR'
			= f.input :combustible_defaut_en, placeholder: 'Combustible EN'
			= f.input :pci_defaut, placeholder: 'PCI'
			= f.input :unite_pci, placeholder: 'Unité PCI'
			= f.input :matieres_volatiles_defaut, placeholder: 'Matières volatiles'
			= f.input :unite_matieres_volatiles, placeholder: 'Unité matières volatiles'
			= f.input :cendres_defaut, placeholder: 'Cendres'
			= f.input :unite_cendres, placeholder: 'Unité cendres'
			= f.input :hardgrove_defaut, placeholder: 'Hardgrove'
			= f.input :unite_hardgrove, placeholder: 'Unité Hardgrove'
			= f.input :teneur_soufre_defaut, placeholder: 'Teneur soufre'
			= f.input :teneur_chlore_defaut, placeholder: 'Teneur chlore'
			= f.input :teneur_azote_defaut, placeholder: 'Teneur azote'
			= f.input :teneur_carbone_defaut, placeholder: 'Teneur carbone'
			= f.input :teneur_hydrogene_defaut, placeholder: 'Teneur hydrogène'
			= f.input :teneur_oxygene_defaut, placeholder: 'Teneur oxygène'
		.form-actions
			= f.button :submit